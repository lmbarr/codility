def integer_to_binary(n):
    if n == 1:
        return str(1)
    else:
        return integer_to_binary(n/2) + str(n % 2)

def solution(N):
    flag = False
    list_count = []
    count = 0
    # print integer_to_binary(N)
    for i in integer_to_binary(N):
        if flag and i == '0':
            count += 1
        elif i == '1' and (not flag):
            flag = True
        elif i == '1' and flag:
            # flag = False
            list_count.append(count)
            count = 0
    # print list_count
    return 0 if list_count == [] else max(list_count)



print solution(2147483647)
print solution(20)
print solution(529)
print solution(328)
print solution(1162)
